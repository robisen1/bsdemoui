BSdemoRoot:
<BSdemoRoot>:
    BSdemoForm

<BSdemoForm>
    orientation: "vertical"

    #bsdemo_currenttime: app_runtime_label

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "BS Demo Interface and GUI"
        BoxLayout:
            Label:
                text: "Current Time"
                size_hint_x: 1
            Label:
                id: app_runtime_label
                text: root.bsdemo_currenttime
                size_hint_x: 1
            Button:
                id: startbutton
                text: "Start / Stop"
                size_hint_x: 1
                on_press: root.get_apptime()
        BoxLayout:
            Label:
                bcolor: 1,0,0,1
                text: "Streaming Cube Events"
                size_hint_x: 1
        BoxLayout:
            Label:
                text: "Last Recived Time(Sec)"
                size_hint_x: 1
            Label:
                text: "Classification Type"
                size_hint_x: 1
            Label:
                text: "Session Time Remaining (Sec)"
                size_hint_x: 1
            Label:
                text: "View Details"
                size_hint_x: 1
            Label:
                text: "Actions"
                size_hint_x: 1
        BoxLayout:
            Label:
                text: "8.2345"
                size_hint_x: 1
            Label:
                text: "Parrot"
                size_hint_x: 1
            Label:
                text: "4.39"
                size_hint_x: 1
            Button:
                text: "Da Poop"
                size_hint_x: 1
            Button:
                text: "TJ poop"
                size_hint_x: 1
        BoxLayout:
            Label:
                text: "1.101"
                size_hint_x: 1
            Label:
                text: "DJI Mavic"
                size_hint_x: 1
            Label:
                text: "Closed"
                size_hint_x: 1
            Button:
                text: "Da Poop"
                size_hint_x: 1
            Button:
                text: "TJ poop"
                size_hint_x: 1
