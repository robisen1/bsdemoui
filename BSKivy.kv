#: import ListItemLabel kivy.uix.listview.ListItemLabel
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

BSdemoRoot:
<BSdemoRoot>:
    BSdemoForm
<BSdemoForm>
    orientation: "vertical"
    device_data: device_data_results
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "BS Demo Interface and GUI"
        BoxLayout:
            Label:
                text: "Current Time"
                size_hint_x: 1
            Label:
                id: app_runtime_label
                text: root.bsdemo_currenttime
                size_hint_x: 1
            Button:
                id: startbutton
                text: "Start / Stop"
                size_hint_x: 1
                on_press: root.get_apptime()
        BoxLayout:
            LabelB:
                bcolor: 0, 1, 0, .5
                text: "Streaming Cube Events"
        BoxLayout:
            Label:
                text: "Last Recived Time(Sec)"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
            Label:
                text: "Classification Type"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
            Label:
                text: "Session Time Remaining (Sec)"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
            Label:
                text: "View Details"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
            Label:
                text: "Actions"
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
        BoxLayout:
            ListView:
                id: device_data_results
                adapter:
                    ListAdapter(data=[], cls=ListItemLabel)
